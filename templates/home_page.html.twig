{% extends 'base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <section>
        <h1>Location de buildings</h1>
        <ul class="products">
            {% for product in products %}
                <li class="product">
                <figure><img src="{{ product.picture }}" alt="Picutre of {{ product.name }}"></figure>

                <div class="product-infos">
                        <span>
                            <h2>{{ product.name|upper }}</h2>
                            <p>{{ product.country }}</p>
                            <p>- {{ product.city }}</p>
                            <p id="price">{{ product.price|number_format(0, ',', ' ') }} <sup>€/jour</sup></p>
                        </span>
                    <a href=" {{ path( 'product', { 'productId':  product.id }) }} "><span>Détails</span></a>
                </div>
            </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
