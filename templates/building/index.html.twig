{% extends 'base.html.twig' %}

{% block title %}Building index{% endblock %}

{% block body %}
    <section>
        <h1>Building index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for building in buildings %}
                <tr>
                    <td>{{ building.id }}</td>
                    <td>{{ building.name }}</td>
                    <td>{{ building.picture }}</td>
                    <td>{{ building.price }}</td>
                    <td>
                        <a href="{{ path('building_show', {'id': building.id}) }}">show</a>
                        <a href="{{ path('building_edit', {'id': building.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('building_new') }}">Create new</a>
    </section>
{% endblock %}
